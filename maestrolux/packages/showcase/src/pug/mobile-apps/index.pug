extends ../layouts/mobile-wrap/app.pug

block variables
  - var pageTitle = " - Home Page"
block content
  div
    #home
    .main-wrap
      include ../../../../mobile-apps-theme/src/pug/components/header/header.pug
      // ##### HEADER #####
      +header(false)
      // ##### END HEADER #####

      main.container-wrap
        // ##### BANNER #####
        section#banner
          include ../../../../mobile-apps-theme/src/pug/components/banner.pug
        // ##### END BANNER #####
        // ##### COUNTER #####
        section#counter
          include ../../../../mobile-apps-theme/src/pug/components/counter.pug
        // ##### END COUNTER #####
        // ##### FEATURE #####
        section#feature.space-top
          include ../../../../mobile-apps-theme/src/pug/components/feature.pug
        // ##### END FEATURE #####
        // ##### SHOWCASE #####
        section#showcase
          include ../../../../mobile-apps-theme/src/pug/components/showcase.pug
        // ##### END SHOWCASE #####
        // ##### TESTIMONIALS #####
        section#testimonials
          include ../../../../mobile-apps-theme/src/pug/components/testimonials.pug
        // ##### END TESTIMONIALS #####
        // ##### FAQ #####
        section#faq.space-top-short
          include ../../../../mobile-apps-theme/src/pug/components/faq.pug
        // ##### END FAQ #####
        // ##### COMPANY LOGO #####
        section#logo_list.space-top-short
          include ../../../../mobile-apps-theme/src/pug/components/company-logo.pug
        // ##### END COMPANY LOGO #####
        // ##### NEWS EVENT #####z
        section#news_event.space-top-short
          include ../../../../mobile-apps-theme/src/pug/components/news-event.pug
        // ##### END NEWS EVENT #####
      // ##### FOOTER #####
      include ../../../../mobile-apps-theme/src/pug/components/footer/footer-with-deco.pug
      // ##### END FOOTER #####
      // ##### PAGE NAV #####
      .hidden-md-down
        include ../../../../mobile-apps-theme/src/pug/components/page-nav.pug
      // ##### END PAGE NAV #####
      // ##### NOTIFICATION #####
      .hidden-md-down
        include ../../../../mobile-apps-theme/src/pug/components/notification.pug
      // ##### END NOTIFICATION #####
  script(src=assets + "/js/vendors/particles/particles-spray.js")
