.root
  .slider-wrap
    .anim-slider
      each item, index in sliderData
        .slide.slider-content.anim-slide
          section.inner.item(class=index % 2 ? "odd" : "even")
            .row
              .col-lg-4.hidden-md-down &nbsp;
              .col-lg-7
                .hidden-md-down
                  .img-wrap
                    .decoration
                      |
                      |
                      svg
                        use(xlink:href=assets+'/images/crypto/deco-promo.svg#main')
                      |
                      |
                    figure.image
                      |
                      |
                      img(src=item.image alt=item.title)/
                      |
                      |
                .card.paper
                  h2
                    |
                    |
                    a.waves-effect(href="#") #{item.title}
                    |
                    |
                  p #{item.desc}
                  section.time
                    h6.use-text-caption
                      span
                        | #{$t.crypto_landing.promo_periode} : #{item.date}

      .anim-arrows
        |
        |
        a.anim-arrows-prev(href='#')
          i.material-icons.icon arrow_back
        |
        |
        a.anim-arrows-next(href='#')
          i.material-icons.icon arrow_forward
        |
        |