-
  var footer = {
    title: "Quick Links",
    description: ['Resource', 'Another resource', 'Final resource', 'Privacy policy', 'Terms of use', 'Terms Condition'],
    link: ['#resource', '#another-resource', '#final-resource', '#privacy-policy', '#terms-of-use', '#terms-condition']
  }
  var news = [
    {
      type: 'news',
      text: 'Sed imperdiet enim ligula vitae viverra.',
      img: imgAPI.photo[4]
    },
    {
      type: 'news',
      text: 'Sed imperdiet enim ligula vitae viverra.',
      img: imgAPI.photo[1]
    },
    {
      type: 'news',
      text: 'Sed imperdiet enim ligula vitae viverra.',
      img: imgAPI.photo[3]
    }
  ]
  var locales = ['ar','de','en','id','pt','zh']

mixin footer(invert)
  footer.footer(class=invert ? "invert" : "")
    .container.fixed-width
      .row.spacing6
        .col-md-5.py-md-0.pa-6
          .logo
            |
            |
            img(src=assets+brand.crypto.img alt="logo")/
            |
            |
            h6 #{brand.crypto.projectName}
          p.footer-desc.pb-6 #{$t.crypto_landing.banner_title}
          .quick-links
            h6.title-nav.mb-2 #{$t.crypto_landing.footer_link}
            ul
              each item, index in footer.description
                li
                  a(href=footer.link[index]) #{item}
        .col-md-4.py-md-0.pa-6
          each item in news
            |
            |
            a.btn.btn-flat.blog-item.waves-effect(href="#")
              |
              |
              span.figure
                img(src=item.img alt="thumb")/
              span.list-text
                span.category #{$t.crypto_landing.footer_news}
                span.content Sed imperdiet enim ligula vitae viverra.
              |
              |
            |
            |
        .col-md-3.py-md-0.py-6.px-8
          .socmed
            |
            |
            a.btn-icon.waves-effect
              span.ion-social-facebook.icon
            |
            |
            a.btn-icon.waves-effect
              span.ion-social-twitter.icon
            |
            |
            a.btn-icon.waves-effect
              span.ion-social-instagram.icon
            |
            |
            a.btn-icon.waves-effect
              span.ion-social-linkedin.icon
            |
            |
          .select-lang.select-outlined
            |
            |
            select.select#lang_select
              each locale in locales
                option(value=locale selected=locale === doc_lang) #{$t.common[locale]}
            |
            |
          p.body-2 &copy; #{brand.crypto.footerText}
