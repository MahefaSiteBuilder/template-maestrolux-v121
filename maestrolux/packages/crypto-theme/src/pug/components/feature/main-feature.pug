include ../titles/title.pug

.main-feature
  if youtube.use
    #video_modal.modal.video-popup
      .modal-content
        |
        |
        h4 #{$t.crypto_landing.banner_title}
        |
        |
        button.btn-icon.modal-close.waves-effect
          i.material-icons close
        .text-center
          #video_iframe
  .container.fixed-width
    .row.spacing6
      .col-md-6.px-6
        +title-main("left", $t.crypto_landing.mainfeature_title)
        p.pb-2.use-text-subtitle2.text-center.text-lg-start #{$t.crypto_landing.mainfeature_subtitle}
        .card.video
          figure
            |
            |
            img(src=imgAPI.crypto[4] alt='cover')/
            |
            |
          |
          |
          button.btn-icon.play-btn.modal-trigger.waves-effect(data-target="video_modal")
            i.ion-ios-play
          |
          |
      .col-md-6.px-6.feature-wrap
        .deco
          |
          |
          svg(width='404px', height='452px', viewbox='0 0 404 452', version='1.1')
            defs
              lineargradient#featureLinearGradient-1(x1='34.1218989%', y1='15.1303808%', x2='20.0910756%', y2='110.664023%')
                stop(stop-color='#4CAF50', offset='0%')
                stop(stop-color='#FFA000', offset='100%')
            g#Feature-1(stroke='none', stroke-width='1', fill='none', fill-rule='evenodd')
              path#FeatureFill-1(d='M2,136.921005 L2,314.197531 C2,330.732338 10.8296846,346.011946 25.1636364,354.27935 L178.836364,442.917242 C193.170315,451.184645 210.829685,451.184645 225.163636,442.917242 L378.836364,354.27935 C393.170315,346.011946 402,330.732338 402,314.197531 L402,136.921005 C402,120.385457 393.170315,105.10659 378.836364,96.8384449 L225.163636,8.2005525 C210.829685,-0.066850833 193.170315,-0.066850833 178.836364,8.2005525 L25.1636364,96.8384449 C10.8296846,105.10659 2,120.385457 2,136.921005', stroke='url(#featureLinearGradient-1)')
          |
          |
        .counter
          .lower
            .card.paper
              |
              |
              span.ion-ios-ionic-outline
              |
              |
              h6.title +600
              p #{$t.crypto_landing.mainfeature_supported}
            .card.paper
              |
              |
              span.ion-ios-people-outline
              |
              |
              h6.title +200K
              p #{$t.crypto_landing.mainfeature_registered}
          .higher
            .card.paper
              |
              |
              span.ion-ios-box-outline
              |
              |
              h6.title +20M
              p #{$t.crypto_landing.mainfeature_open}
            .card.paper
              |
              |
              span.ion-ios-heart-outline
              |
              |
              h6.title +50M
              p #{$t.crypto_landing.mainfeature_invested}
