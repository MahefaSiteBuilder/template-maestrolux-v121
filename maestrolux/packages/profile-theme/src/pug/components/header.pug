include settings.pug

mixin header(invert)
  header.app-bar#header.header.mq-md-down(
    class=invert && "fixed"
    data-class="fixed"
  )
    .container.fixed-width-md-up
      .header-content
        nav.nav-logo.nav-menu(class=invert && 'invert')
          |
          |
          button#mobile_menu.btn-icon.waves-effect.hamburger.hamburger--spin.mobile-menu
            |
            |
            span.hamburger-box
              |
              |
              span.bar.hamburger-inner
              |
              |
            |
            |
          .logo(class= !invert && "scrollnav")
            |
            |
            a(href=invert ? link.profile.home : "#home")
              img(
                src=assets + brand.profile.img
                alt="logo"
              )/
            |
            |
          +setting-menu(true)
  .paper-nav#main_menu
    .mobile-nav
      .scrollactive-nav.scrollnav
        ul.menu
          each item, index in menu.profile
            li(style="animation-duration: "+(Number(index + 1)) * 0.25 + 's')
              a.btn-flat.waves-effect(
                href=invert ? 'index.html#'+item.name : '#'+item.name
              ) #{$t.profile_landing['header_'+item.name]}
