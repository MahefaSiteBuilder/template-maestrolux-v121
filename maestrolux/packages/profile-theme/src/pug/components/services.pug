.root
  .floating-title
    +title-main
      strong #{$t.profile_landing.services_title}
    p.use-text-paragraph #{$t.profile_landing.services_desc}
  .slider-wrap
    .carousel
      |
      |
      button.btn-icon.nav.prev.waves-effect#prev_services
        |
        |
        i.ion-ios-arrow-back
        |
        |
      |
      |
      .slick-carousel#services_carousel(data-length=services.length)
        .item.item-props-first
          div
        each item in services
          .item
            +icon-text(item.icon, item.name, item.desc)
        .item.show-md-up
          .item.item-props-last
            div
      |
      |
      button.btn-icon.nav.next.waves-effect#next_services
        |
        |
        i.ion-ios-arrow-forward
        |
        |
      |
      |
